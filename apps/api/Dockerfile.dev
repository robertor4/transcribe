FROM node:20-alpine

# Install ffmpeg
RUN apk add --no-cache ffmpeg

WORKDIR /app

# Copy entire project
COPY . .

# Install dependencies
RUN npm ci

# Build shared package
WORKDIR /app/packages/shared
RUN npm run build

WORKDIR /app/apps/api

# Create temp directory for audio processing
RUN mkdir -p temp

# Expose port
EXPOSE 3001

# Start with hot reload
CMD ["npm", "run", "dev"]