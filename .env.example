# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Firebase Client (for Next.js frontend)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase Admin (for NestJS backend)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your_project.iam.gserviceaccount.com

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:3001

# Redis (for job queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Secret
JWT_SECRET=your_jwt_secret_here

# Environment
NODE_ENV=development

# AssemblyAI (Primary transcription and speaker diarization service)
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# Gmail (Email service for sharing transcripts)
# GMAIL_AUTH_USER is your primary Gmail account for authentication
# GMAIL_FROM_EMAIL is the email address that will appear in the FROM field (can be an alias)
GMAIL_AUTH_USER=roberto@dreamone.nl
GMAIL_FROM_EMAIL=noreply@neuralsummary.com
GMAIL_APP_PASSWORD=your_gmail_app_password_here

# Frontend URL (Used for generating share links)
FRONTEND_URL=http://localhost:3000

# Quality Settings (Optional - for controlling API quality)
# QUALITY_MODE: Set to 'premium' for highest quality, 'balanced' for cost-effectiveness
QUALITY_MODE=premium
# GPT_MODEL_PREFERENCE: Default GPT model (gpt-4o for best quality, gpt-4o-mini for cost savings)
GPT_MODEL_PREFERENCE=gpt-4o